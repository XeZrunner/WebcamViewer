    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Fill="#1DFFFFFF" Grid.Row="0" />

        <!-- content -->
        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid x:Name="actionBar" Grid.Row="0" Height="48" Background="#1FFFFFFF">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                    <usercontrols:AppBar_Button x:Name="menuButton" Click="menuButton_Click" />

                    <Label x:Name="actionBar_cameraLabel" Content="CAMERA NAME"
                           Margin="5,0,0,0" VerticalAlignment="Center"
                           Foreground="White" FontFamily="Segoe UI Semibold" FontSize="14"/>

                </StackPanel>

            </Grid>

            <Grid x:Name="webcamimageGrid" Grid.Row="1">

                <Image x:Name="webcamimage" />

            </Grid>

            <Grid x:Name="menuGrid" Grid.Row="1" Visibility="Hidden"
                  HorizontalAlignment="Left" Width="300"
                  RenderTransformOrigin="0.5, 0.5">

                <Grid.RenderTransform>
                    <TranslateTransform x:Name="menu_translateTransform" />
                </Grid.RenderTransform>

                <!-- Blurbehind border -->
                <Border>

                    <Border.Background>
                        <VisualBrush Visual="{Binding ElementName=webcamimageGrid}" Stretch="None" AlignmentX="Left" />
                    </Border.Background>

                    <Border.Effect>
                        <BlurEffect x:Name="menu_blureffect" Radius="10" />
                    </Border.Effect>

                </Border>

                <!-- Dim -->
                <Rectangle Fill="#5A000000" />

                <StackPanel VerticalAlignment="Top">

                    <usercontrols:webcamPage_menuGrid_ShortcutButton x:Name="menu_localsaveButton" Text="Save image" IconText="&#xe74e;"
                                                                     Width="300"
                                                                     Foreground="White"
                                                                     Click="menu_localsaveButton_Click"/>

                    <usercontrols:webcamPage_menuGrid_ShortcutButton x:Name="menu_archiveorgsaveButton" Text="Save image on archive.org" IconText="&#xe898;"
                                                                     Width="300"
                                                                     Foreground="White"
                                                                     Click="menu_archiveorgsaveButton_Click"/>

                    <Rectangle Fill="#4FFFFFFF" Height="1" Margin="5" />

                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="0,0,0,48">
                        <StackPanel x:Name="menu_cameraList" />
                    </ScrollViewer>

                </StackPanel>

                <!-- Settings button -->

                <usercontrols:webcamPage_menuGrid_ShortcutButton x:Name="menu_settingsButton" Text="Settings" IconText="&#xe713;"
                                                                 VerticalAlignment="Bottom"
                                                                 Foreground="White"
                                                                 Click="menu_settingsButton_Click"/>

            </Grid>

            <Grid x:Name="progressGrid" Grid.Row="1" Background="#5F000000" Visibility="Hidden">

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Controls:ProgressRing x:Name="progressGrid_progressRing" Visibility="Hidden"
                                           Width="60" Height="60" EllipseDiameterScale="0.85"
                                           Foreground="White"/>

                    <Controls:MetroProgressBar x:Name="progressGrid_progressBar" Visibility="Hidden"
                                               Width="300" IsIndeterminate="True"
                                               Foreground="White" />

                    <Label x:Name="progressGrid_progressLabel" Content="Status"
                           Margin="0,150,0,0" HorizontalAlignment="Center"
                           Foreground="White" />

                </Grid>

            </Grid>

        </Grid>

        <Grid x:Name="particleGrid" Grid.RowSpan="2" Visibility="Collapsed">

            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,32,0,0">

                <Rectangle x:Name="rectangle" Fill="White" Width="1" Height="7" RenderTransformOrigin="0.5,0.5" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-30"/>
                            <TranslateTransform X="47" Y="37"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle x:Name="rectangle1" Fill="White" Width="1" Height="3" RenderTransformOrigin="0.5,0.5" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-13"/>
                            <TranslateTransform X="30" Y="44"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle x:Name="rectangle2" Fill="White" Width="1" Height="13" RenderTransformOrigin="0.5,0.5" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="16"/>
                            <TranslateTransform X="11" Y="42"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle x:Name="rectangle3" Fill="White" Width="1" Height="13" RenderTransformOrigin="0.5,0.5" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-20"/>
                            <TranslateTransform X="6" Y="-5"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle x:Name="rectangle4" Fill="White" Width="1" Height="3" RenderTransformOrigin="0.5,0.5" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="26"/>
                            <TranslateTransform X="41" Y="-2"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle x:Name="rectangle5" Fill="White" Width="1" Height="2" RenderTransformOrigin="0.5,0.5" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-87"/>
                            <TranslateTransform X="1" Y="19"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

            </Grid>

        </Grid>

    </Grid>

</Page>
