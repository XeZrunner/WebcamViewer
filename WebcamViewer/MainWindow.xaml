<Controls:MetroWindow x:Name="window" x:Class="WebcamViewer.MainWindow"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebcamViewer"
        xmlns:usercontrols="clr-namespace:WebcamViewer.User_controls"
        mc:Ignorable="d"
        Title="Webcam Viewer" Height="632" Width="800" Icon="/Resources/icon_white.ico" WindowStyle="None" WindowStartupLocation="CenterScreen" SizeChanged="window_SizeChanged" Loaded="window_Loaded"
        ShowTitleBar="False" ShowCloseButton="False" ShowMaxRestoreButton="False" ShowMinButton="False" WindowTransitionsEnabled="False"
        BorderBrush="{DynamicResource accentcolor_dark}" BorderThickness="1" GlowBrush="{DynamicResource accentcolor_light}">
    <Controls:MetroWindow.Resources>
        <Storyboard x:Key="settingsPage_In">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.95"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.95"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="632"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="settingsPage">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="closeButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="Black"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="maximizeButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="Black"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="minimizeButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="Black"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="titleLabel">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="#FF2F2F2F"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="webcamPage_menuButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="Black"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="backButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="Black"/>
            </ColorAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="webcamPage_In">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.95"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.95"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="settingsPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="settingsPage">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="webcamPage">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="632"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="backButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="webcamPage_menuButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="titleLabel">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="minimizeButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="maximizeButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="closeButton">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="White"/>
            </ColorAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="webcamPage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Controls:MetroWindow.Resources>

    <Grid Background="Black">

        <!-- Pages -->

        <Grid x:Name="webcamPage" Background="Black"
              Visibility="Visible" RenderTransformOrigin="0.5,0.5">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="White"/>
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>

            <Grid x:Name="webcamPage_MainContentGrid" Background="Black">

                <Rectangle Fill="Black" Height="32" VerticalAlignment="Top"/>

                <!-- Content -->
                <Grid Margin="0,32,0,0">

                    <Image x:Name="webcamPage_Image" Stretch="Uniform" />

                </Grid>

                <!-- Dimming -->
                <Grid x:Name="webcamPage_Dim" Background="#3F000000" Visibility="Visible">

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <Controls:ProgressRing x:Name="webcamPage_progressRing" Foreground="White" Width="60" Height="60" EllipseDiameterScale="0.85" Visibility="Collapsed" />
                        <Controls:MetroProgressBar x:Name="webcamPage_progressBar" Foreground="White" Width="250" Margin="0,0,10,0" IsIndeterminate="True" Visibility="Collapsed"/>

                        <Label x:Name="webcamPage_progressLabel" HorizontalAlignment="Center" FontSize="12" Visibility="Collapsed">loading image...</Label>

                    </StackPanel>

                </Grid>

            </Grid>

            <!-- Menu grid -->
            <Grid x:Name="webcamPage_menuGrid" Background="#00FFFFFF" HorizontalAlignment="Left" Width="320" ClipToBounds="True" RenderTransformOrigin="0.5, 0.5"
                  Visibility="Collapsed">

                <!-- Blurbehind -->
                <Border x:Name="webcamPage_menuGrid_blurbehindBorder">
                    <Border.Effect>
                        <BlurEffect x:Name="webcamPage_menuGrid_blurbehind" Radius="0"/>
                    </Border.Effect>
                    <Border.Background>
                        <VisualBrush Visual="{Binding ElementName=webcamPage_MainContentGrid}" AlignmentX="Left" AlignmentY="Center" Stretch="None"/>
                    </Border.Background>
                </Border>

                <Rectangle Fill="#8F000000"/>

                <!-- Content -->
                <Grid Margin="0,32,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">

                        <Grid x:Name="webcamPage_menuGrid_infoGrid" Height="112" Width="300" Margin="0,10,0,0" VerticalAlignment="Top"> <!-- height with progresspanel is 157 -->

                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="0"/> <!-- 45 -->
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="webcamPage_menuGrid_cameraNameLabel" Grid.Row="0" VerticalAlignment="Center" FontFamily="Segoe UI Semibold">CAMERA NAME</TextBlock>
                            <TextBlock x:Name="webcamPage_menuGrid_cameraUrlLabel" Grid.Row="1" VerticalAlignment="Center">http://camearurl.com/cam-1.jpg</TextBlock>

                            <Rectangle Grid.Row="2" Fill="#FF333333" Height="2" Margin="10,5,10,5" />

                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                                <usercontrols:webcamPage_menuGrid_CameraActionButton x:Name="webcamPage_menuGrid_localSaveButton" Margin="0,0,5,0" Text="SAVE IMAGE" Click="webcamPage_menuGrid_localSaveButton_Click"/>
                                <usercontrols:webcamPage_menuGrid_CameraActionButton x:Name="webcamPage_menuGrid_BothSaveButton" Margin="0,0,5,0" Width="10" Text="" Click="webcamPage_menuGrid_BothSaveButton_Click"/>
                                <usercontrols:webcamPage_menuGrid_CameraActionButton x:Name="webcampage_menuGrid_archiveorgSaveButton" Text="SAVE ON ARCHIVE.ORG" Click="webcampage_menuGrid_archiveorgSaveButton_Click"/>

                            </StackPanel>

                            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Visibility="Collapsed">
                                <Controls:ProgressRing Foreground="White" Width="30" Height="30" IsLarge="False" />
                                <TextBlock VerticalAlignment="Center" Margin="15,0,0,0" FontSize="13.5">Downloading image...</TextBlock>
                            </StackPanel>

                        </Grid>

                        <Rectangle Fill="#FF2C2C2C" Height="2" Margin="0,10,0,15" />

                        <!-- camera list -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel x:Name="webcamPage_menuGrid_cameraListStackPanel">



                            </StackPanel>
                        </ScrollViewer>

                    </StackPanel>

                    <usercontrols:webcamPage_menuGrid_ShortcutButton Grid.Row="1" IconText="&#xe90F;" Text="Debug menu" />

                    <usercontrols:webcamPage_menuGrid_ShortcutButton x:Name="webcamPage_SettingsShortcutButton" Grid.Row="2" IconText="&#xe713;" Text="Settings" Click="webcamPage_SettingsShortcutButton_Click"/>

                </Grid>

            </Grid>

        </Grid>

        <Grid x:Name="settingsPage" Background="White" RenderTransformOrigin="0.5,0.5"
              Visibility="Collapsed">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="{DynamicResource settingsPage_foregroundText}"/>
                </Style>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="{DynamicResource settingsPage_foregroundText}"/>
                </Style>
            </Grid.Resources>
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>

            <Grid x:Name="settingsPage_MainContentGrid" Background="White">

                <Rectangle Fill="White" Height="32" VerticalAlignment="Top" />

                <!-- Content -->
                <Grid Margin="0,32,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="290"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="settingsPage_leftGrid" Grid.Column="0">

                        <StackPanel>

                            <Label FontFamily="Segoe UI Semibold" FontSize="14" HorizontalAlignment="Left" Margin="15,10,0,5">SETTINGS</Label>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <StackPanel VerticalAlignment="Top" x:Name="settingsPage_leftGrid_TabButtonStackPanel">

                                    <usercontrols:settingsPage_TabButton IconText="&#xE80A;" Title="WEBCAMS" Description="Add, edit or remove webcams" Tag="0" Click="settingsPage_leftGrid_TabButtonClick" />

                                    <usercontrols:settingsPage_TabButton IconText="&#xE2B1;" Title="USER INTERFACE" Description="Change the appearance" Tag="1" Click="settingsPage_leftGrid_TabButtonClick"/>

                                    <usercontrols:settingsPage_TabButton IconText="&#xE946;" Title="ABOUT &amp; UPDATES" Description="Info about the app and available updates" Tag="2" Click="settingsPage_leftGrid_TabButtonClick"/>

                                    <usercontrols:settingsPage_TabButton IconText="&#xE90F;" Title="DEBUG MENU" Description="Debug mode: %s" Tag="3" Click="settingsPage_leftGrid_TabButtonClick"/>

                                    <usercontrols:settingsPage_TabButton IconText="&#xE822;" Title="BETA PROGRAM SETTINGS" Description="Current channel: %s at branch %s" Tag="4" Click="settingsPage_leftGrid_TabButtonClick"/>

                                    <usercontrols:settingsPage_TabButton IconText="" Title="DEFAULT CUSTOMIZATIONS DEBUG" Description="In use: %s" Tag="5" Click="settingsPage_leftGrid_TabButtonClick"/>

                                </StackPanel>
                            </ScrollViewer>

                        </StackPanel>

                    </Grid>

                    <Grid x:Name="settingsPage_rightGrid" Grid.Column="1">

                        <!-- Pages -->

                        <Grid x:Name="settingsPage_PagesGrid">

                            <Grid x:Name="settingsPage_WebcamEditorPage" Tag="0"
                                  Visibility="Collapsed">

                                <Controls:ProgressRing x:Name="settingsPage_WebcamEditorPage_progressRing" Foreground="{DynamicResource accentcolor_dark}" EllipseDiameterScale="0.85" Visibility="Collapsed"/>

                                <!-- Content -->
                                <Grid x:Name="settingsPage_WebcamEditorPage_Content">

                                    <Grid Margin="10">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="53"/>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Row="0">Add, edit, remove and re-arrange cameras below</Label>

                                        <ListView Grid.Row="1" x:Name="settingsPage_WebcamEditorPage_ListView" Margin="0,10,0,0" SelectionChanged="settingsPage_WebcamEditorPage_ListView_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Camera name" DisplayMemberBinding="{Binding Name}" />
                                                    <GridViewColumn Header="Camera URL" DisplayMemberBinding="{Binding Url}" />
                                                    <GridViewColumn Header="Save location" DisplayMemberBinding="{Binding SaveLocation}"/>
                                                    <GridViewColumn Header="Refresh rate (seconds)" DisplayMemberBinding="{Binding RefreshRate}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>

                                        <!-- Item editor -->
                                        <Grid Grid.Row="2" x:Name="settingsPage_WebcamEditorPage_ItemEditorGrid" Background="{DynamicResource settingsPage_backgroundSecondary3}" Margin="10,20,10,10"
                                              Visibility="Visible">

                                            <Label x:Name="settingsPage_WebcamEditorPage_ItemEditorGrid_Disabled" HorizontalAlignment="Center" Visibility="Collapsed">Save your changes to edit the cameras.</Label>

                                            <StackPanel x:Name="settingsPage_WebcamEditorPage_ItemEditorGrid_Main">

                                                <Label>Camera name</Label>
                                                <TextBox x:Name="settingsPage_WebcamEditorPage_ItemEditor_NameTextBox"/>

                                                <Label Margin="0,5,0,0">Camera URL</Label>
                                                <TextBox x:Name="settingsPage_WebcamEditorPage_ItemEditor_UrlTextBox"/>

                                                <Label Margin="0,5,0,0">Save location</Label>
                                                <TextBox x:Name="settingsPage_WebcamEditorPage_ItemEditor_SaveLocationTextBox"/>

                                                <Label Margin="0,5,0,0">Refresh rate (seconds)</Label>
                                                <TextBox x:Name="settingsPage_WebcamEditorPage_ItemEditor_RefreshRateTextBox"/>

                                            </StackPanel>

                                        </Grid>

                                        <usercontrols:settingsPage_NormalButton Grid.Row="3" x:Name="settingsPage_WebcamEditorPage_SaveButton" Margin="0,0,20,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Text="Save changes" Click="settingsPage_WebcamEditorPage_SaveButton_Click"/>

                                    </Grid>

                                </Grid>

                            </Grid>

                            <Grid x:Name="settingsPage_UserInterfacePage" Tag="1"
                                  Visibility="Collapsed">

                                <Controls:ProgressRing x:Name="settingsPage_UserInterfacePage_progressRing" Foreground="{DynamicResource accentcolor_dark}" EllipseDiameterScale="0.85" Visibility="Collapsed"/>

                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <StackPanel Margin="10">

                                        <Label Foreground="{DynamicResource accentcolor_dark}" FontFamily="Segoe UI Semibold" HorizontalAlignment="Left" Margin="10,0,0,0">USER INTERFACE</Label>

                                        <!-- User interface -->
                                        <StackPanel Margin="0,5,0,0">
                                            <usercontrols:settingsPage_ToggleSwitchButton x:Name="settingsPage_UserInterfacePage_UI_AccentColorButton" Title="Accent color" Description="The color to use throughout the user interface...&#x0a;Current color: %s" IsToggleButton="False">
                                                <usercontrols:settingsPage_ToggleSwitchButton.RightSideGrid>
                                                    <Grid>

                                                        <StackPanel>
                                                            <Rectangle Fill="{DynamicResource accentcolor_dark}" Width="30" Height="10" />
                                                            <Rectangle Fill="{DynamicResource accentcolor_light}" Width="30" Height="20" />
                                                        </StackPanel>

                                                    </Grid>
                                                </usercontrols:settingsPage_ToggleSwitchButton.RightSideGrid>
                                            </usercontrols:settingsPage_ToggleSwitchButton>
                                        </StackPanel>

                                        <Label Foreground="{DynamicResource accentcolor_dark}" FontFamily="Segoe UI Semibold" HorizontalAlignment="Left" Margin="10,5,0,0">HOME</Label>

                                        <!-- Home -->
                                        <StackPanel Margin="0,5,0,0">
                                            <usercontrols:settingsPage_ToggleSwitchButton x:Name="settingsPage_UserInterfacePage_Home_MenuBlurBehindToggleButton" Title="Menu blur behind" Description="Toggle the blurred background in the menu"/>
                                            <usercontrols:settingsPage_ToggleSwitchButton x:Name="settingsPage_UserInterfacePage_Home_ArchiveOrgIntegrationToggleButton" Title="archive.org integration" Description="Allow saving the cameras to archive.org"/>
                                            <usercontrols:settingsPage_ToggleSwitchButton x:Name="settingsPage_UserInterfacePage_Home_ImageSizingButton" Title="Image sizing" Description="Choose whether the image should stretch, fill or scale uniformly in the window...&#x0a;Current mode: %s" IsToggleButton="False"/>
                                        </StackPanel>

                                        <Label Foreground="{DynamicResource accentcolor_dark}" FontFamily="Segoe UI Semibold" HorizontalAlignment="Left" Margin="10,5,0,0">SETTINGS</Label>

                                        <!-- Settings -->
                                        <StackPanel Margin="0,5,0,0">
                                            <usercontrols:settingsPage_ToggleSwitchButton x:Name="settingsPage_UserInterfacePage_SettingsPage_ShowAccentColorOnTitlebarToggleButton" Title="Show accent color on titlebar (legacy)" Description="Shows the current accent color on the titlebar in the Settings"/>
                                        </StackPanel>

                                        <Label Foreground="{DynamicResource accentcolor_dark}" FontFamily="Segoe UI Semibold" HorizontalAlignment="Left" Margin="10,5,0,0">LEFTOVERS (WebcamViewer7-md)</Label>
                                        <Label Foreground="Black" FontFamily="Segoe UI Semibold" FontSize="11" HorizontalAlignment="Left" Margin="10,0,0,0">No leftovers found. (0)</Label>

                                        <Label Foreground="{DynamicResource accentcolor_dark}" FontFamily="Segoe UI Semibold" HorizontalAlignment="Left" Margin="10,5,0,0">DEVELOPMENT NOTES</Label>
                                        <usercontrols:settingsPage_ToggleSwitchButton Title="Custom tabs for pages" Description="We'll put things like the archive.org integration of the Home page into it's own respective subpage on the left..." IsToggleButton="False"/>
                                        <usercontrols:settingsPage_ToggleSwitchButton Title="Better settings pages (UNCERTAIN)" Description="Some kind of loading from a UI file or something for some of these..." IsToggleButton="False"/>

                                    </StackPanel>
                                </ScrollViewer>

                            </Grid>

                            <Grid x:Name="settingsPage_AboutPage" Tag="2"
                                  Visibility="Collapsed">

                            </Grid>

                            <Grid x:Name="settingsPage_DebugMenuPage" Tag="3"
                                  Visibility="Collapsed">

                            </Grid>

                            <Grid x:Name="settingsPage_BetaProgramSettingsPage" Tag="4"
                                  Visibility="Collapsed">

                            </Grid>

                            <Grid x:Name="settingsPage_DefaultCustomizationsDebugPage" Tag="5"
                                  Visibility="Collapsed">

                            </Grid>

                        </Grid>

                    </Grid>

                </Grid>

            </Grid>

        </Grid>


        <Grid x:Name="titlebarGrid" Background="#00FFFFFF" Height="32" VerticalAlignment="Top" MouseDown="titlebarGrid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back button -->
            <Button x:Name="backButton" Grid.Column="0" Style="{DynamicResource titlebarButton}" FontSize="13" Content="&#xe830;" Visibility="Collapsed" TextOptions.TextFormattingMode="Ideal" Click="backButton_Click"/>

            <!-- Menu button-->
            <Button x:Name="webcamPage_menuButton" Grid.Column="0" Style="{DynamicResource titlebarButton}" FontSize="13" Content="&#xe700;" Visibility="Collapsed" Click="webcamPage_menuButton_Click"/>

            <Label x:Name="titleLabel" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="White" Grid.Column="1" Content="Webcam Viewer"/>

            <!-- Window controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="minimizeButton" Style="{DynamicResource titlebarButton}" Content="&#xe921;" Click="minimizeButton_Click"/>
                <Button x:Name="maximizeButton" Style="{DynamicResource titlebarButton}" Content="&#xe922;" Click="maximizeButton_Click"/>
                <Button x:Name="closeButton" Style="{DynamicResource titlebarButton}" Tag="closeButton" Content="&#xe8bb;" Click="closeButton_Click"/>
            </StackPanel>

        </Grid>

    </Grid>

</Controls:MetroWindow>
