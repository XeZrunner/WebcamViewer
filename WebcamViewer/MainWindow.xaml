                            <TextBlock x:Name="webcamPage_debugoverlay_defaultcustomization_deliverycountTextBlock" Text="Default customizations delivery count: %i"/>
                            <TextBlock x:Name="webcamPage_debugoverlay_defaultcustomization_customdeliveryTextBlock" Text="Default customizations custom delivery: %s"/>
