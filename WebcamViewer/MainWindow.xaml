                            <TextBlock x:Name="webcamPage_debugoverlay_debugmodeTextBlock" Text="Debug mode: %s"/>
                            <TextBlock x:Name="webcamPage_debugoverlay_prereleasechannelTextBlock" Text="Prerelease channel: %s"/>

                            <Rectangle Fill="Gray" Height="2" Margin="0,10,0,10" />

                            <TextBlock x:Name="webcamPage_debugoverlay_defaultcustomization_deliveryenabledTextBlock" Text="Default customizations delivery enabled: True"/>
                            <TextBlock x:Name="webcamPage_debugoverlay_defaultcustomization_deliverystatusTextBlock" Text="Default customizations delivery status: %s (%i)"/>
                            <TextBlock x:Name="webcamPage_debugoverlay_defaultcustomization_deliverycountTextBlock" Text="Default customizations delivery count: %i"/>
