<UserControl x:Name="usercontrol" x:Class="WebcamViewer.User_controls.ProgressRing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebcamViewer.User_controls"
             mc:Ignorable="d" 
             Foreground="White" TextOptions.TextRenderingMode="Grayscale" IsVisibleChanged="usercontrol_IsVisibleChanged" Loaded="usercontrol_Loaded">
    <Grid x:Name="mainGrid">

        <Label x:Name="ring" Foreground="{Binding ElementName=usercontrol, Path=Foreground}" Background="{Binding ElementName=usercontrol, Path=Background}" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" TextOptions.TextFormattingMode="Display" FontFamily="/Fonts/#Setup" Content="&#xe087;" FontSize="23"/>

    </Grid>
</UserControl>
