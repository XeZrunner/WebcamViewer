<Page x:Name="page" x:Class="WebcamViewer.Updates.Pages.Internal_development_page.Subpages.DefaultCamerasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WebcamViewer.Updates.Pages.Internal_development_page.Subpages"
      xmlns:usercontrols="clr-namespace:WebcamViewer.Updates.User_controls"
      xmlns:controleffects="clr-namespace:XeZrunner.UI.ControlEffects;assembly=XeZrunner.UI"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Default cameras" Loaded="Page_Loaded" IsVisibleChanged="page_IsVisibleChanged">

    <Grid Background="{DynamicResource settingsPage_background}">
        <ScrollViewer Margin="10">

            <Grid>

                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">

                    <Label Foreground="{DynamicResource settingsPage_foregroundText}" FontSize="20" FontFamily="Segoe UI Semibold">Default cameras</Label>
                    <Label Foreground="{DynamicResource settingsPage_foregroundText}">Below is a list of all the cameras that come pre-configured with Webcam Viewer.</Label>

                </StackPanel>

                <Grid Margin="5,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">

                    <StackPanel>

                        <Grid>
                            <Grid.Clip>
                                <RectangleGeometry Rect="0,0,369,340" RadiusX="3" RadiusY="3" />
                            </Grid.Clip>

                            <TextBlock Foreground="{DynamicResource settingsPage_foregroundSecondary}" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Michalovce, Slovakia - Námestie osloboditeľov 01
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://www.michalovce.sk/webcam/michalovce.sk-camera-001.jpg
                        
                        <!-- END -->
                        
                        <LineBreak/>
                        <LineBreak/>
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Nowy Targ, Poland - Restaurant "U gazdy" (Kamera na Tatry)
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://www.ugazdy.pl/kamerka/obrazek.jpg
                        
                        <!-- END -->
                        
                        <LineBreak/>
                        <LineBreak/>
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Gelendzhik, Russia - Glavmore (Camera 2)
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://static.glavmore.ru/cam/cam-1.jpg
                        
                        <!-- END -->
                        
                        <LineBreak/>
                        <LineBreak/>
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Poprad, Slovakia - Weather station "Funsat"
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://funsat.sk.d.websupport.sk/webcam/funsat.jpg
                        
                        <!-- END -->
                        
                        <LineBreak/>
                        <LineBreak/>
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Michalovce, Slovakia - Busová stanica
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://gecom.sk/img/kam-autobuska-orig.jpg
                        
                        <!-- END -->
                        
                        <LineBreak/>
                        <LineBreak/>
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Żywiec, Poland - Żywiec lake
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://www.megasurf.pl/cam/Video01.jpg
                        
                        <!-- END -->
                        
                        <LineBreak/>
                        <LineBreak/>
                        
                        <!-- START -->
                        
                        <TextBlock Foreground="{DynamicResource settingsPage_foregroundText}">
                            Levoča, Slovakia - www.pocasielevoca.sk
                        </TextBlock>
                        
                        <LineBreak/>
                        
                        http://www.pocasielevoca.sk/data/snimek.jpg
                        
                        <!-- END -->
                        
                    </TextBlock>

                            <controleffects:RippleDrawable Color="{DynamicResource settingsPage_backgroundSecondary4}" FillColor="Transparent" />

                        </Grid>

                        <usercontrols:settingsPage_NormalButton x:Name="resetDefaultCamerasButton"
                                                                Background="Transparent" Margin="0,10,0,0" TextAlignment="Left"
                                                                Text="Reset default cameras (apply configuration file)" />
                        <usercontrols:settingsPage_NormalButton x:Name="resetConfigurationButton"
                                                                Background="Transparent" TextAlignment="Left"
                                                                Text="Reset configuration" />

                    </StackPanel>

                </Grid>

            </Grid>

        </ScrollViewer>

        <usercontrols:ArcProgress Grid.RowSpan="2" x:Name="progressring" Color="{DynamicResource settingsPage_foregroundSecondary}" Width="65" Height="65" IsActive="False" Visibility="Collapsed" />

    </Grid>

</Page>