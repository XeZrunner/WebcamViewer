<UserControl x:Name="usercontrol" x:Class="WebcamViewer.Pages.Settings_page.Controls.PageSideMenuNavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebcamViewer.Pages.Settings_page.Controls"
             xmlns:usercontrols="clr-namespace:WebcamViewer.User_controls"
             mc:Ignorable="d" Loaded="usercontrol_Loaded"
             Width="300" d:DesignHeight="600" Background="Transparent" Foreground="{DynamicResource settingsPage_foregroundText}">

    <Grid>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">

            <StackPanel x:Name="sideMenuNavigation_ItemsStackPanel">

                <StackPanel>

                    <TextBlock Text="Begin by adding 'settingsPage_TabButton's to this control's Items List property." TextWrapping="WrapWithOverflow"/>

                </StackPanel>

            </StackPanel>

        </ScrollViewer>

    </Grid>

</UserControl>
